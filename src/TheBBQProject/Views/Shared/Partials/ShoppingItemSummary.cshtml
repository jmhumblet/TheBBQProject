@model ShoppingItem

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img src="@string.Format($"/images/{Model.Name}.jpg")" class="item-img" />
        <div class="caption">
            <h4 class="pull-right">@Model.Price €</h4>
            <h4>
                @Model.Name
            </h4>
            <p>@Model.Description</p>
        </div>
        <div class="ratings">
            <p>
                <a asp-controller="ShoppingItem" asp-action="AddToCart" asp-route-id="@Model.Id">
                    <span class="glyphicon glyphicon-shopping-cart"></span>
                    Add to cart
                </a>
            </p>
        </div>
        <div class="ratings">
            <p class="pull-right">@Model.ReviewCount reviews</p>
            <p>
                @for (int i = 0; i < 5; i++)
                {
                    if (i < Model.Rating)
                    {
                        <span class="glyphicon glyphicon-star"></span>
                    }
                    else
                    {
                        <span class="glyphicon glyphicon-star-empty"></span>
                    }
                }
            </p>
        </div>
    </div>
</div>